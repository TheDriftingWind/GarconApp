<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="charleszhu.qunnipiac.edu.gittest.CustomerFragment"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonMakeReservation"
        android:layout_gravity="center_horizontal"
        android:onClick="onCustomerClick"
        android:textSize="20sp"
        android:background="#ff7c2d"
        android:textColor="#FFF"
        android:padding="10dp"
        android:id="@+id/add_button"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="#ff7c2d"
        android:textColor="#FFF"
        android:onClick="onCustomerClick"
        android:id="@+id/view_button"
        android:text="@string/buttonViewReservation"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
